{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "amd": true,
        "jquery": true,
        "mocha": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "plugins": [
        "react"
    ],
    "rules": {
        "max-params": [1, 4],
        "camelcase": [1, { "properties": "never" }],
        "arrow-parens": [1, "as-needed"],
        "arrow-spacing": [1, {
            "after": true,
            "before": true
        }],
        "brace-style": [2, "1tbs"],
        "comma-dangle": [0, "always-multiline"],
        "curly": [2, "all"],
        "dot-notation": [2, {
            "allowKeywords": true,
            "allowPattern": ""
        }],
        "no-const-assign": [2],
        "no-unused-vars": [2, {
            "args": "after-used",
            "vars": "all"
        }],
        "one-var": [2, "never"],
        "no-use-before-define": 1,
        "prefer-const": 1,
        "prefer-spread": 1,
        "prefer-template": 0,
        "quotes": [2, "single", "avoid-escape"],
        "jsx-quotes": [2, "prefer-double"],
        "react/jsx-uses-react": 2,
        "react/jsx-key": 1,
        "react/no-did-mount-set-state": 2,
        "react/no-did-update-set-state": 2,
        "react/no-direct-mutation-state": 2,
        "react/prefer-es6-class": [2, "never"],
        "react/jsx-no-undef": 1,
        "react/jsx-uses-vars": 1,
        "react/prop-types": [0],
        "react/react-in-jsx-scope": 1,
        "react/sort-comp": [1],
        "react/jsx-pascal-case": 2,
        "semi": [2, "always"],
        "semi-spacing": [1, {
            "after": true,
            "before": false
        }],
        "yoda": [2, "never"]
    }
}
